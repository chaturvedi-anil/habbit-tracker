<main class="container mt-5">
    <h1 class="text-center text-white mb-4">User Profile</h1>
    <ul class="list-group">
        <% if (locals.user) { %>
            <li class="list-group-item">
                Name: <%= user.name %>
            </li>
            <li class="list-group-item">
                Email: <%= user.email %>
            </li>
        <% } else { %>
            <li class="list-group-item">
                No user data available.
            </li>
        <% } %>
    </ul>
</main>